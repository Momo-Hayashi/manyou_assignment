<h1>Administration</h1>
<h2>ユーザー一覧画面</h2>

<p><%= link_to 'Create new user', new_admin_user_path, class: 'btn btn-info' %></p>

<article>
  <table>
    <tr>
      <th>User ID</th>
      <th>User Name</th>
      <th>Count of Tasks</th>
      <th>User Type</th>
    </tr>
    <% @users.each do |user| %>
      <tr class ="task_row">
        <td><%= user.id %></td>
        <td class = "content"><%= user.name %></td>
        <td class = "content"><%= user.tasks.count %></td>
        <td class = "content"><%= user.admin == true ? 'Admin' : "User" %></td>
        <td><%= link_to 'Show', admin_user_path(user.id), class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user.id), class: 'btn btn-info' %></td>
        <td><%= link_to 'Delete', admin_user_path(user.id), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-info' %></td>
      </tr>
    <% end %>
  </table>
</article>
