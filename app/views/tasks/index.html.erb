<h1>Reminder</h1>
<p><%= notice %></p>

<table>
  <tr>
    <th>タスク名</th>
    <th>詳細</th>
    <th>完了期限</th>
  </tr>
  <% @task.each do |task| %>
    <tr class ="task_row">
      <td><%= task.name %></td>
      <td><%= task.detail %></td>
      <td><%= task.expire_on %></td>
      <td><%= link_to 'detail', task_path(task.id) %></td>
      <td><%= link_to 'edit', edit_task_path(task.id) %></td>
      <td><%= link_to 'delete', task_path(task.id), method: :delete, data: { confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to 'タスクを作成する', new_task_path %></p>
<p><%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %></p>
