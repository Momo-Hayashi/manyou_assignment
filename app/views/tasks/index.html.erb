<h1>Reminder</h1>
<p><%= notice %></p>
<%= form_with local: true, url: tasks_path, method: 'get' do |f| %>
  <%= f.label :Name %>
  <%= f.text_field :name_search %>
  <%= f.label :Status %>
  <%= f.select :status_search, Task.statuses.keys.to_a {}, include_blank: true %>
  <%= f.submit 'Search' %>
<% end %>

<div class="menu">
  <%= link_to 'Create new Task', new_task_path %>
  <%= link_to "Sort by Deadline", tasks_path(sort_expired: "true") %>
  <%= link_to "Sort by Priority", tasks_path(sort_priority: "true") %>
</div>
<br>

<p><%= @tasks.count %>件のタスクが登録されています。</p>
<table>
  <tr>
    <th>Name</th>
    <th>Detail</th>
    <th>Deadline</th>
    <th>Status</th>
    <th>Priority</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr class ="task_row">
      <td><%= task.name %></td>
      <td><%= task.detail %></td>
      <td><%= task.expire_on %></td>
      <td><%= task.status %></td>
      <td><%= task.priority %></td>
      <td><%= link_to 'detail', task_path(task.id) %></td>
      <td><%= link_to 'edit', edit_task_path(task.id) %></td>
      <td><%= link_to 'delete', task_path(task.id), method: :delete, data: { confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  <%= paginate @tasks %>
</table>
